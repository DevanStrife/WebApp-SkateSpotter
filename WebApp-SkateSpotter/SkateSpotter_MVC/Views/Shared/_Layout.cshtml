<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkateSpotter</title>
    <link rel="stylesheet" href="~/css/SlateTheme.css" asp-append-version="true" />
    <link href="~/js/site.js" />
@*  <link rel="stylesheet" href="~/SkateSpotter_MVC.styles.css" asp-append-version="true" /> *@

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="z-index: 10">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarColor04">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">SkateSpotter</a>
                            <span class="visually-hidden">(current)</span>
                        </li>
                        <form class="d-flex">
                            <input id="searchTbx" class="form-control me-sm-2" type="text" placeholder="Search">
                            <input type="button" class="btn btn-secondary my-2 my-sm-0" value="Search" onclick="Search()">
                        </form>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Stores" asp-action="Index">Skate Stores!</a>
                            <span class="visually-hidden">(current)</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Brands" asp-action="Index">Skate Brands!</a>
                            <span class="visually-hidden">(current)</span>
                        </li>
                        <li class="nav-item" style="right: 50px;">
                            <partial name="_LoginPartial">
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SkateSpotter
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
